+    {"name": "Michael Chen", "avatar": None},
+    {"name": "Emily Rodriguez", "avatar": None},
+    {"name": "David Kim", "avatar": None},
+    {"name": "Jessica Martinez", "avatar": None},
+    {"name": "James Wilson", "avatar": None},
